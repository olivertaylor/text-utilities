#!/usr/bin/env sh

if test -z $1; then
    echo "ERROR: requires argument 1 to be surround character" >&2
    exit 1
elif [ $1 = "{" ]; then
    echo "{$(cat)}"
    exit 0
elif [ $1 = "<" ]; then
    echo "<$(cat)>"
    exit 0
elif [ $1 = "[" ]; then
    echo "[$(cat)]"
    exit 0
elif [ $1 = "(" ]; then
    echo "($(cat))"
    exit 0
elif [ $1 = "\"" ]; then
    echo "\"$(cat)\""
    exit 0
elif [ $1 = "'" ]; then
    echo "'$(cat)'"
    exit 0
elif [ $1 = "*" ]; then
    echo "*$(cat)*"
    exit 0
elif [ $1 = "**" ]; then
    echo "**$(cat)**"
    exit 0
elif [ $1 = "_" ]; then
    echo "_$(cat)_"
    exit 0
elif [ $1 = "\`" ]; then
    echo "\`$(cat)\`"
    exit 0
else
    echo "Unknown surround character" >&2
    exit 1	
fi
